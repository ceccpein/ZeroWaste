<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zerowaste">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fridge"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fridge_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".Login" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".addFood" android:screenOrientation="portrait"></activity>

        <receiver android:name=".AlarmReceiver" android:enabled="true"></receiver>

    </application>

</manifest>